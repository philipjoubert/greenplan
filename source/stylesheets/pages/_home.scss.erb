.hero h1 {
    line-height: 1.2;
    color: #fff;
}

.hero-md {
    min-height: 350px;
    height: 350px;
}

.hero-sm {
    min-height: 300px;
    height: 300px;
    .hero h1 {
        font-size: 2.3rem;
    }
    .hero-content {
        max-width: none;
        @extend .col-lg-10;
    }
}

.home-page .hero {
    text-align: center;
    background-color: #52418f;
    background-color: rgba(82,65,143,0.97);
    background: -webkit-linear-gradient(left top,rgba(41,8,48,0.97) 0,rgba(82,65,143,0.97) 50%,rgba(114,183,227,0.97) 100%);
    background: -moz-linear-gradient(left top,rgba(41,8,48,0.97) 0,rgba(82,65,143,0.97) 50%,rgba(114,183,227,0.97) 100%);
    background: -o-linear-gradient(left top,rgba(41,8,48,0.97) 0,rgba(82,65,143,0.97) 50%,rgba(114,183,227,0.97) 100%);
    background: -ms-linear-gradient(left top,rgba(41,8,48,0.97) 0,rgba(82,65,143,0.97) 50%,rgba(114,183,227,0.97) 100%);
    background: linear-gradient(to right bottom,rgba(41,8,48,0.97) 0,rgba(82,65,143,0.97) 50%,rgba(114,183,227,0.97) 100%);
    h1 {
        color: #fff;
    }
}

.customer-bar {
    padding: 1rem 0;
    width: 100%;
    z-index: 2;
    max-width: 1680px;
    background-color: #fafafa;
    border: none;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
}

.sub-nav {
    width: 100%;
    z-index: 2;
    max-width: 1680px;
    min-height: 60px;
    background-color: #fafafa;
    border: none;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
}

.sub-nav a {
    margin-top: 0;
    display: inline-block;
    line-height: 60px;
    width: auto;
}

.sub-nav a {
    margin-right: 20px;
    font-size: 11px;
    line-height: 60px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
    color: #5f6a7d;
}

.sub-nav a:focus, .sub-nav a:hover {
    color: #2586b7;
    text-decoration: none;
}