<% wrap_layout :layout do %>

<div class="case-study container">
	<div class="row">
		<div class="col-lg-12">
			<header>
				<h1><%= current_article.data.title %></h1>
				<p><%= current_article.data.description %></p>
			</header>
		</div>
		<div class="sidebar-navigation col-md-3 hidden-sm-down">
			<h5>Consulting Services</h5>
			<ul>
				<% blog("consulting").articles.each do |article| %>
				<li>
					<%= nav_link article.title, article.url %>
				</li>
				<% end  %>
			</ul>
		</div>
		<div class="col-md-9">
		  <article>
		    <%= yield %>
		  </article>
		</div>
	</div>
</div>

<div class="m-t-lg">
	<%= partial "partials/cta" %>
</div>

<% end %>