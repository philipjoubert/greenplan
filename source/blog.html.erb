---
title: Business Process Optimisation Blog
blog: blog
pageable: true
per_page: 10
---

<div class="container">
  <h1>Journey Blog</h1>
</div>

<div class="container">

  <% page_articles.each_with_index do |article, i| %>
    <article class="post-summary">
      <div class="image">
        <%= image_tag "#{article.data.thumbnail}" %>
      </div>
      <div class="content">
        <h2><%= link_to article.title, article %></h2>
        <p><%= article.summary(250) %></p>

        <div class="details text-uppercase">
          <span><%= article.date.strftime('%B %e, %Y') %></span>
          <span class="circle">.</span>
          <span><%= article.data.author %></span>
        </div>
      </div>
    </article>
  <% end %>

  <div class="pagination">
    <% if paginate %>
      <% if prev_page %>
        <%= link_to 'Previous page', prev_page, :class=>"left" %>
      <% end %>

      <% if next_page %>
        <%= link_to 'Next page', next_page, :class=>"right" %>
      <% end %>
    <% end %>
  </div>
</div>